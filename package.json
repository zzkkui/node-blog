{
  "name": "blog",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "start:dist": "yarn build && yarn serve:dist",
    "start": "npm run tsc && ts-node -T -r tsconfig-paths/register bin/www",
    "serve": "ts-node-dev -T -r tsconfig-paths/register bin/www",
    "lint": "npm run tsc && eslint --ext .ts ./src",
    "lint-fix": "npm run lint --fix",
    "tsc": "tsc --noEmit",
    "build": "./node_modules/.bin/ts-node build.ts",
    "serve:dist": "cross-env NODE_ENV=production node -r tsconfig-paths/register dist/bin/www"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/fs-extra": "^9.0.13",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.3",
    "@types/koa-json": "^2.0.20",
    "@types/koa-logger": "^3.1.2",
    "@types/koa-morgan": "^1.0.5",
    "@types/koa-redis": "^4.0.1",
    "@types/koa-router": "^7.4.4",
    "@types/koa-session": "^5.10.4",
    "@types/mysql": "^2.15.19",
    "@types/node": "^15.12.4",
    "@types/redis": "^2.8.32",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "airbnb": "^0.0.2",
    "cross-env": "^7.0.3",
    "cz-customizable": "^6.3.0",
    "eslint": "^7.29.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "fs-extra": "^10.0.0",
    "husky": "^6.0.0",
    "jet-logger": "^1.0.6",
    "prettier": "^2.3.1",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.3.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "npm run lint",
      "prettier .prettierrc --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "dependencies": {
    "debug": "~2.6.9",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.1",
    "koa-morgan": "^1.0.1",
    "koa-onerror": "^4.1.0",
    "koa-redis": "^4.0.1",
    "koa-router": "^10.1.1",
    "koa-session": "^6.2.0",
    "mysql": "^2.18.1",
    "xss": "^1.0.10"
  }
}
